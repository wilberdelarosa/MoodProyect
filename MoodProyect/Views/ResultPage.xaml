<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:MoodProyect.ViewModels"
             x:Class="MoodProyect.Views.ResultPage"
             x:DataType="vm:ResultViewModel">
    <ScrollView>
        <VerticalStackLayout Spacing="20">
            <Frame>
                <Label Text="{Binding Advice}" FontSize="20" />
            </Frame>
            <Label Text="{Binding ClosingPhrase}" FontSize="24" FontAttributes="Italic" HorizontalOptions="Center" />
            <Button Text="Intentar de nuevo" Style="{StaticResource PrimaryButton}" Command="{Binding RetryCommand}" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
